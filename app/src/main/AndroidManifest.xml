<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.matt.rockpapersciccor">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="com.matt.rockpaperscissor.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.matt.rockpaperscissor.MainMenu"
            android:screenOrientation="portrait"/>
        <activity android:name="com.matt.rockpaperscissor.SinglePlayer"
            android:screenOrientation="portrait"/>
        <activity android:name="com.matt.rockpaperscissor.PlayerOneSelect"
            android:screenOrientation="portrait"/>
        <activity android:name="com.matt.rockpaperscissor.PlayerTwoSelect"
            android:screenOrientation="portrait"/>
        <activity android:name="com.matt.rockpaperscissor.FightSceneSimple"
            android:screenOrientation="portrait"/>
        <activity android:name="com.matt.rockpaperscissor.FightSceneSingle"
            android:screenOrientation="portrait"/>

    </application>

</manifest>